  class={`
    isolate py-3 px-12 flex items-center fixed top-0 w-full justify-between z-40 text-white [& svg]:transition-colors
    [&:has(li:hover)>#navbar-container]:pb-16

    [&:has(#vehicles:hover)>#navbar-container>#vehicles-grid]:grid-rows-[1fr]
