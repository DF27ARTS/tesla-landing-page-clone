          <a
            class={`
              w-[17rem] text-center text-sm bg-transparent overflow-hidden rounded font-medium isolation
              text-black py-2 transition-colors relative before:absolute before:inset-0 before:bg-white/50
              before:-z-10
            `}
            href="#"
          >
            Explore Inventory
          </a>

